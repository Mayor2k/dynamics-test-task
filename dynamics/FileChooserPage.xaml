<Page x:Class="dynamics.FileChooserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dynamics"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileChooserPage">

    <Grid Background="White">
        <TextBlock Name="folerSercherTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 150" FontSize="20">Выберете директорию с файлами проверок</TextBlock>
        <Button Name="folderSearcherButton" Click="onFolderSearcherClick" ClickMode="Press" Width="150" Height="50">Выбрать директорию</Button>
    </Grid>
</Page>
